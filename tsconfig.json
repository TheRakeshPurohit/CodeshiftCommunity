{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@hypermod/*": ["../packages/*/src"],
      "@hypermod/*": ["../packages/*/src"]
    }
  },
  "include": ["packages/**/*", "community/**/*", "scripts"],
  "exclude": [
    "node_modules",
    "plugin_packages",
    "dist",
    "__tests__",
    "**/*.test*",
    "**/*.spec*"
  ]
}
