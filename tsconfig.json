{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es5",
      "scripthost",
      "es2015.core",
      "es2015.collection",
      "es2015.symbol",
      "es2015.iterable",
      "es2015.promise",
      "es2016",
      "es2017"
    ]
  },
  "exclude": ["node_modules", "plugin_packages", "dist"]
}
